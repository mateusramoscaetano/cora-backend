{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "typeRoots": [
    "./src/@types",
    "./custom_typings",
    "./@types",
    "./node_modules/@types"
  ],
  "include": [
    "src/**/*",
    "@types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}